<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.bookapi.presentation.list.BookListFragment"
        android:label="@string/listFragment_label">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/bookDetailFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.bookapi.presentation.detail.BookDetailFragment"
        android:label="@string/book_detail_fragment_label"></fragment>
    <fragment
        android:id="@+id/favBookFragment"
        android:name="com.example.bookapi.presentation.favourite.FavouriteBooksFragment"
        android:label="@string/favourite_fragment_label"></fragment>
</navigation>